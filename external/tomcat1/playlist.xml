<playlist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../TestConfig/playlist.xsd">
	<!--Add entries corresponding to your test similar to the tomcat1 below so that
		TestKitGen can produce the equivalent make command lines to be executed in the build 
	-->
	<test>
		<testCaseName>tomcat1_test</testCaseName>
	<command>docker run --name tomcat1-test --rm $(EXTRA_DOCKER_ARGS) adoptopenjdk-tomcat1-test:latest ; \
		$(TEST_STATUS); \
		docker cp tomcat1-test:/tomcat/output/build/logs $(REPORTDIR)/external_test_reports; \
		docker rm tomcat1-test; \
		docker rmi -f adoptopenjdk-tomcat1-test
	</command>
		<subsets>
			<subset>8</subset>
		</subsets>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>external</group>
		</groups>
	</test>
</playlist>
